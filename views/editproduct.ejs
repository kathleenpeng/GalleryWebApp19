<% include ../partials/header %>


<div class="row">
  <h1>Welcome to the edit products page  <br>
<div style="text-align: center; width: 100%; background-color: rgba(255, 255, 255, 0.8);text-align: center; margin-bottom: 10px;" >
         
          <% result.forEach(function(product) { %>
         <form accept-charset="UTF-8" style="display: inline-block; width: 90%;" action="/editproduct/<%= product.Id %>" method="post">    
                <div class="item">
                 <label for="name">Name</label>
                    <input name="name" type="text" value="<%= product.Name %>" />
                     
                    <label for="activity">Description</label>
                    <input name="activity" type="text" value="<%= product.Activity %>" />
                   
                    <label for="price">Price</label> 
                    <input name="price" type="text" value="<%= product.Price %>"/>
                    
                    <label for="image">Image</label> 
                    <input name="image" type="text" value="<%= product.Image %>" />
                
         
          <br><br>
         
          
          
      </form>
<button class="button">Update</button>
          </div>
              </form>
               <% }); %>
    </div>
  </h1>
</div>



<% include ../partials/footer %>
